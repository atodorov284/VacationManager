@model IEnumerable<VacationManager.Models.User>
@using VacationManager.ExtentionMethods;

@{ ViewData["Title"] = "Index";
    Layout = "_Layout";
    User loggedUser = this.ViewContext.HttpContext.Session.GetObject<User>("loggedUser"); }

@if (loggedUser.Role == 3)
{
<p class="btn-primary">
    
<a asp-action="Create">Create New</a>

</p>
}

<h1>Index</h1>



<table class="table-all bordered centered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            @if (loggedUser.Role == 3)
            {
<th>
    @Html.DisplayNameFor(model => model.Password)
</th>            }
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Username)
    </td>
    @if (loggedUser.Role == 3)
    {
<td>
    @Html.DisplayFor(modelItem => item.Password)
</td>}

    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Role)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Team)
    </td>
    <td>
        <a class="redirect" asp-action="Details" asp-route-id="@item.UserId">Details</a>
        @if (loggedUser.Role == 3)
        {
<a class="redirect" asp-action="Edit" asp-route-id="@item.UserId">Edit</a>
                    <a class="redirect" asp-action="Delete" asp-route-id="@item.UserId">Delete</a>}

    </td>
</tr>
}
    </tbody>
</table>
