@model IEnumerable<VacationManager.Models.Team>
@using VacationManager.ExtentionMethods;

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
    User loggedUser = this.ViewContext.HttpContext.Session.GetObject<User>("loggedUser");
}

<h1>Index</h1>

<p>
    @if (loggedUser.Role == 3)
    {
        <a asp-action="Create">Create New</a>
    }

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leader)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Leader)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.TeamId">Details</a> |
                    @if (loggedUser.Role == 3)
                    {
                        <a asp-action="Edit" asp-route-id="@item.TeamId">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.TeamId">Delete</a>
                    }


                </td>
            </tr>
        }
    </tbody>
</table>
